#!/usr/bin/env php
<?php

use Symfony\Component\Process\Process;
use Symfony\Component\Dotenv\Dotenv;

if (is_file(__DIR__.'/../vendor/autoload.php')) {
    // Installed locally
    require __DIR__.'/../vendor/autoload.php';
}else if (is_file(__DIR__.'/../autoload.php')) {
    // Installed globally
    require __DIR__.'/../../../autoload.php';
} else {
    throw new \Exception('Could not find composer autoload file. Current directory is '.__DIR__);
}

$dotEnvFilename = \dirname(__DIR__) . '/.env';
$envVars = (new Dotenv())->parse(\file_get_contents($dotEnvFilename), $dotEnvFilename);

$webServerAddressPort = $envVars['WEB_SERVER_ADDRESSPORT'] ? $envVars['WEB_SERVER_ADDRESSPORT'] : "localhost:8000";
//php -S localhost:8000
//dd($webServerAddressPort);
$runWebServerCmdParts = ['php', '-S', $webServerAddressPort , '-t', './public'];


$web = new Process($runWebServerCmdParts, null, null, null, 0);
$web->setTty(Process::isTtySupported());
$web->start(function ($type, $buffer) {
    if (Process::ERR === $type) {
        echo 'WEB ERROR   > '.$buffer;
    } else {
        echo 'WEB   > '.$buffer;
    }
});

$mail = new Process([
    'php',
    __DIR__.'/console',
    'email:server',
    '--port',
    $envVars['SMTP_SERVER_PORT'],
    '--allowed_hosts',
    $envVars['SMTP_SERVER_ALLOWED_HOSTS'],
    ], null, null, null, 0);
$mail->setTty(Process::isTtySupported());
$mail->start(function ($type, $buffer) {
    if (Process::ERR === $type) {
        echo 'EMAIL ERROR > '.$buffer;
    } else {
        echo 'EMAIL > '.$buffer;
    }
});
$mail->wait();
